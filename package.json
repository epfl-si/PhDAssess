{
  "name": "phd-assess",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-bpmn": "bpmnlint --config bpmn-model/bpmn-lint-rules.json bpmn-model/phdAssessProcess.bpmn",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "postinstall": "patch-package",
    "cypress:ui": "cypress open",
    "cypress:headless": "cypress run",
    "e2e": "METEOR_LOCAL_DIR=.meteor/test BABEL_ENV=test DISABLE_REACT_FAST_REFRESH=1 meteor run  --settings=settings.json --port 4000",
    "test:dev:ui": "start-test 'npm run e2e' :4000 'npm run cypress:ui'",
    "test:dev:headless": "start-test 'npm run e2e' :4000 'npm run cypress:headless'"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "@formio/react": "^5.0.0-rc.3",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@popperjs/core": "^2.9.1",
    "crypto-js": "^4.0.0",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "epfl-sti-react-library": "git+https://gitlab+deploy-token-65:rvdyy-as5yR5G2UyyWK-@gitlab.epfl.ch/sti-it/epfl-sti-react-library.git",
    "find-up": "^5.0.0",
    "formiojs": "^4.13.0-rc.19",
    "lodash": "^4.17.21",
    "meteor-node-stubs": "^1.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hot-toast": "^2.0.0",
    "react-popover": "^0.5.10",
    "react-popper": "^2.2.4",
    "react-router-dom": "^5.2.0",
    "simpl-schema": "^1.10.2",
    "supports-color": "^9.0.0",
    "timed-memoize": "^2.4.2",
    "zeebe-node": "^1.3.0"
  },
  "devDependencies": {
    "@types/crypto-js": "4.0.1",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.168",
    "@types/meteor": "^1.4.49",
    "@types/mocha": "^8.0.3",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.7",
    "@types/simpl-schema": "^1.10.3",
    "bpmnlint": "^7.2.1",
    "cypress": "^8.3.0",
    "patch-package": "^6.4.7",
    "start-server-and-test": "^1.13.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.0.2"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.tsx",
      "server": "server/main.ts"
    },
    "testModule": "tests/main.ts"
  }
}
