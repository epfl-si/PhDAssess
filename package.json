    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@types/meteor": "^1.4.49",
    "@types/mocha": "^8.0.3",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.7",
    "patch-package": "^6.4.7",
    "ts-node": "^9.1.1",
